---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: plex-media-pv
spec:
  capacity:
    storage: 500Gi
  storageClassName: standard
  accessModes:
  - ReadWriteMany
  nfs:
    server: 192.168.1.89
    path: "/volume1/homes/plex"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: plex-media-pvc
spec:
  volumeName: plex-media-pv
  accessModes:
  - ReadWriteMany
  storageClassName: standard
  resources:
    requests:
      storage: 500Gi
